<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
    card_view:cardElevation="8dp">
   <LinearLayout
       android:background="@color/colorPrimaryDark"
       android:layout_width="match_parent"
       android:layout_height="150sp">
   </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        card_view:cardCornerRadius="10sp"
        card_view:cardBackgroundColor="@color/putih"
        card_view:cardElevation="8dp">
        <LinearLayout
            android:padding="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAMA TENTOR"/>
            <EditText
                android:id="@+id/namaDetailTentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TGL. AWAL"/>
            <EditText
                android:id="@+id/tglAwalID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TGL. AKHIR"/>
            <EditText
                android:id="@+id/tglAkhirID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/buttonDetailID"
                android:layout_marginTop="50sp"
                android:textColor="@color/putih"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
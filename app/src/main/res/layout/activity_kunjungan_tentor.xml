<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/airheader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KunjunganTentor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KUNJUNGAN/LES"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textAlignment="center"
        android:paddingTop="50sp"/>
    <LinearLayout
        android:paddingTop="30sp"
        android:layout_margin="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HARI,TANGGAL DAN JAM"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan / Materi / Topik"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOTO AKTIVITAS"/>
        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/logorumahbelajar"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
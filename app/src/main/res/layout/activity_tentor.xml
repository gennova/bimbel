<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/airheader"
    android:weightSum="10"
    tools:context=".murid.MuridActivity">
    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/textID"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="HALAMAN TENTOR"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textNameLogin"
            android:layout_below="@+id/textID"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="USER LOGIN NAME"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/logoutIDStaff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:layout_below="@+id/textNameLogin"/>
    </RelativeLayout>


    <GridLayout
        android:layout_marginTop="20sp"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="1dp">

        <!-- ROW 1 COL 1 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/profilTentorID"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/profiletentor"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/txtreceptionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="PROFIL KU"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <!-- ROW 1 COL 2 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/presensiTentorHarian"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/todo"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/qualificationID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="PRESENSI"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <!-- ROW 1 COL 2 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/daftaraktivitasID"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/read"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/daftaraktivitasIDTentor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="AKTIVITAS KU"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>
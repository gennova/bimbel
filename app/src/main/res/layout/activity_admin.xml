<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/airheader"
    android:weightSum="10"
    tools:context=".admin.AdminActivity">
    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/textID"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="HALAMAN ADMINISTRATOR"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textNameLoginAdmin"
            android:layout_below="@+id/textID"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="USER LOGIN NAME"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/logoutIDStaff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:layout_below="@+id/textNameLoginAdmin"/>
    </RelativeLayout>


    <GridLayout
        android:layout_weight="8.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="1dp">

        <!-- ROW 1 COL 1 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/muridIDVview"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/list"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/txtreceptionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="DAFTAR SISWA"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <!-- ROW 1 COL 2 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/datatentorID"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/datatentor"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/qualificationID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="DATA TENTOR"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <!-- ROW 2 COL 1 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/siswabaruID"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/siswa"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/processingoneID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="SISWA BARU"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <!-- ROW 2 COL 2 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/tentorbaruID"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/teacher"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/processingoneID1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="TENTOR BARU"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <!-- ROW 3 COL 1 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/aktivitastentorID"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/daily"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/aktivitastentor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="AKTIVITAS TENTOR"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <!-- ROW 3 COL 2 -->
        <androidx.cardview.widget.CardView
            android:background="@drawable/shape"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1.4"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_margin="15dp">
                <ImageView
                    android:id="@+id/addedLestID"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:src="@drawable/add"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/addedLestIDView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="AKTIVITAS TENTOR"/>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </GridLayout>

</LinearLayout>